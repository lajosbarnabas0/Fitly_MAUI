<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fitly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fitly"
    xmlns:pages="clr-namespace:Fitly.Pages"
    Title="Fitly">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate pages:ProfilePage}"
        Route="ProfilePage" />
    <ShellContent
        Title="LetsBegin"
        ContentTemplate="{DataTemplate pages:LetsBeginPage}"
        Route="LetsBeginPage" />
    <ShellContent
        Title="MainCommunity"
        ContentTemplate="{DataTemplate pages:MainCommunityPage}"
        Route="MainCommunityPage" />
</Shell>
