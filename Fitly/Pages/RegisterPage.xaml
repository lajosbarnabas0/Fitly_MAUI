<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Fitly.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{x:StaticResource fitly_darkgray}"
    Loaded="ContentPage_Loaded"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="Montserrat" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Margin="15" RowDefinitions="0.2*,1.5*">
            <Border HorizontalOptions="Center" Stroke="{x:StaticResource fitly_darkgray}">
                <StackLayout Orientation="Horizontal">
                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="Menü"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <Image Source="expand_more_24.png" WidthRequest="50" />
                </StackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NavMenu_Tapped" />
                </Border.GestureRecognizers>
            </Border>
            <Border
                Grid.Row="1"
                Padding="15"
                BackgroundColor="{x:StaticResource fitly_darkgray}"
                Stroke="{x:StaticResource fitly_darkgray}"
                StrokeShape="RoundRectangle 20"
                StyleId="Main_Border">
                <Grid RowDefinitions="*,*,*,*,*,*,*">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontAutoScalingEnabled="True"
                        FontSize="35"
                        HorizontalOptions="Center"
                        Text="Regisztráció"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <StackLayout
                        Grid.Row="1"
                        Orientation="Vertical"
                        StyleId="Name_STCK">
                        <Label
                            Margin="5,0,0,5"
                            FontAutoScalingEnabled="True"
                            FontSize="18"
                            Text="Teljes név" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10">
                            <Entry
                                Placeholder="Teljes név"
                                PlaceholderColor="LightGray"
                                Text="{Binding Name}"
                                TextColor="White" />
                        </Border>
                    </StackLayout>
                    <Grid
                        Grid.Row="2"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="15"
                        StyleId="Email_Grid">
                        <StackLayout Grid.Column="0">
                            <Label
                                Margin="5,0,0,5"
                                FontAutoScalingEnabled="True"
                                FontSize="18"
                                Text="E-mail" />
                            <Border
                                BackgroundColor="{x:StaticResource Gray900}"
                                Stroke="{x:StaticResource Gray900}"
                                StrokeShape="RoundRectangle 10">
                                <Entry
                                    Keyboard="Email"
                                    Placeholder="E-mail"
                                    PlaceholderColor="LightGray"
                                    Text="{Binding Email}"
                                    TextColor="White" />
                            </Border>
                        </StackLayout>
                        <StackLayout Grid.Column="1">
                            <Label
                                Margin="5,0,0,5"
                                FontAutoScalingEnabled="True"
                                FontSize="18"
                                Text="Jelszó" />
                            <Border
                                BackgroundColor="{x:StaticResource Gray900}"
                                Stroke="{x:StaticResource Gray900}"
                                StrokeShape="RoundRectangle 10">
                                <Entry
                                    IsPassword="True"
                                    Placeholder="Jelszó"
                                    PlaceholderColor="LightGray"
                                    Text="{Binding Password}"
                                    TextColor="White" />
                            </Border>
                        </StackLayout>
                    </Grid>
                    <StackLayout Grid.Row="3" StyleId="Password_STCK">
                        <Label
                            Margin="5,0,0,5"
                            FontAutoScalingEnabled="True"
                            FontSize="18"
                            Text="Jelszó megerősítése" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10">
                            <Entry
                                IsPassword="True"
                                Placeholder="Jelszó megerősítése"
                                PlaceholderColor="LightGray"
                                Text="{Binding Password_confirmation}"
                                TextColor="White" />
                        </Border>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="4"
                        Orientation="Horizontal"
                        Spacing="10"
                        StyleId="Date_Grid">
                        <StackLayout WidthRequest="160">
                            <Label
                                Margin="5,0,0,5"
                                FontAutoScalingEnabled="True"
                                FontSize="18"
                                Text="Születési dátum" />
                            <Border
                                BackgroundColor="{x:StaticResource Gray900}"
                                Stroke="{x:StaticResource Gray900}"
                                StrokeShape="RoundRectangle 10">
                                <DatePicker Date="{Binding Birthday}" TextColor="LightGray" />
                            </Border>
                        </StackLayout>
                        <StackLayout WidthRequest="160">
                            <Label
                                Margin="5,0,0,5"
                                FontAutoScalingEnabled="True"
                                FontSize="18"
                                Text="Nem" />
                            <Border
                                BackgroundColor="{x:StaticResource Gray900}"
                                Stroke="{x:StaticResource Gray900}"
                                StrokeShape="RoundRectangle 10">
                                <Picker x:Name="gender_PCKR" SelectedItem="{Binding Gender}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Férfi</x:String>
                                            <x:String>Nő</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Border>
                        </StackLayout>
                    </StackLayout>

                    <Button
                        x:Name="Register_Button"
                        Grid.Row="5"
                        Margin="20"
                        BackgroundColor="{x:StaticResource fitly_green}"
                        Clicked="Register_Button_Clicked"
                        Command="{Binding RegisterCommand}"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="60"
                        StyleId="Register_Button"
                        Text="Regisztráció"
                        WidthRequest="200" />
                    <Grid
                        Grid.Row="6"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="10"
                        StyleId="Label_grid">
                        <Label
                            Grid.Column="0"
                            FontAutoScalingEnabled="True"
                            FontSize="16"
                            HorizontalOptions="End"
                            Text="Van már fiókod?" />
                        <Label
                            Grid.Column="1"
                            FontAutoScalingEnabled="True"
                            FontSize="16"
                            Text="Jelentkezz be!"
                            TextColor="{x:StaticResource fitly_green}"
                            TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding IfAlreadyHaveAccountCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>