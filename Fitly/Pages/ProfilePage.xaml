<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Fitly.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{x:StaticResource fitly_darkgray}"
    Loaded="ContentPage_Loaded"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="Montserrat" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Margin="15" RowDefinitions="0.2*,1.5*">
            <Border
                Grid.Row="0"
                HorizontalOptions="Center"
                Stroke="{x:StaticResource fitly_darkgray}">
                <StackLayout Orientation="Horizontal">
                    <Image Source="expand_more_24.png" WidthRequest="50" />
                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="Menü"
                        TextColor="White"
                        VerticalOptions="Center" />
                </StackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NavMenu_Tapped" />
                </Border.GestureRecognizers>
            </Border>
            <Grid
                Grid.Row="1"
                RowDefinitions="0.4*,*,*,*,*,*"
                RowSpacing="15">

                <Label FontSize="22" Text="Az én adataim" />

                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Spacing="50">

                    <StackLayout
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        Orientation="Vertical"
                        Spacing="5">
                        <Label
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Magasság (cm)"
                            VerticalOptions="Center" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10"
                            VerticalOptions="Center"
                            WidthRequest="100">
                            <Entry />
                        </Border>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        Orientation="Vertical"
                        Spacing="5">
                        <Label
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Súly (kg)"
                            VerticalOptions="Center" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            HorizontalOptions="Center"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10"
                            VerticalOptions="Center"
                            WidthRequest="100">
                            <Entry />
                        </Border>
                    </StackLayout>

                </StackLayout>

                <StackLayout
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Spacing="50"
                    VerticalOptions="Center">
                    <StackLayout
                        Grid.Row="2"
                        HorizontalOptions="Center"
                        Orientation="Vertical"
                        Spacing="5">
                        <Label
                            FontSize="18"
                            Text="Ajánlott kalória"
                            VerticalOptions="Center" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            HorizontalOptions="Center"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10"
                            VerticalOptions="Center"
                            WidthRequest="100">
                            <Entry />
                        </Border>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="3"
                        HorizontalOptions="Center"
                        Orientation="Vertical"
                        Spacing="5">
                        <Label
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Fogyás / hízás"
                            VerticalOptions="Center" />
                        <Border
                            BackgroundColor="{x:StaticResource Gray900}"
                            Stroke="{x:StaticResource Gray900}"
                            StrokeShape="RoundRectangle 10"
                            WidthRequest="100">
                            <Picker x:Name="gender_PCKR" SelectedItem="{Binding Gender}">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Fogyás</x:String>
                                        <x:String>Hízás</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>
                    </StackLayout>

                </StackLayout>

                <StackLayout
                    Grid.Row="3"
                    HorizontalOptions="Center"
                    Orientation="Vertical"
                    Spacing="5">
                    <Label
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Cél súly (kg)"
                        VerticalOptions="Center" />
                    <Border
                        BackgroundColor="{x:StaticResource Gray900}"
                        Stroke="{x:StaticResource Gray900}"
                        StrokeShape="RoundRectangle 10"
                        VerticalOptions="Center"
                        WidthRequest="100">
                        <Entry />
                    </Border>
                </StackLayout>

                <Button
                    Grid.Row="4"
                    BackgroundColor="{x:StaticResource fitly_green}"
                    Command="{Binding LogoutCommand}"
                    FontSize="18"
                    HeightRequest="60"
                    Text="Adatok mentése"
                    WidthRequest="180" />

                <Button
                    Grid.Row="5"
                    BackgroundColor="{x:StaticResource fitly_green}"
                    Command="{Binding LogoutCommand}"
                    FontSize="18"
                    HeightRequest="60"
                    Text="Kijelentkezés"
                    WidthRequest="180" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>